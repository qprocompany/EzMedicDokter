<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="cari problem"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A00] Cholera"
                    android:textSize="17dp" />

                <CheckBox
                    android:id="@+id/checkBox28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A01] Typhoid"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A02] Salmonella infections"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A04] Bacterial intestinal infections"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A05] Bacterial foodborne intoxications"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A06] Amoebiasis"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A07] Other protozoal intestinal diseases"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A08] Viral and other specified intestinal infections"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A09] Diarhoea and Gastroenteritis"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A15] Resoiratory tuberculosis"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A17] Tuberculosis of nervous system"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <CheckBox
                    android:id="@+id/checkBox11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[A18] Tuberculosis of other organs"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueJeans"
        android:text="TAMBAH"
        android:textSize="17dp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>